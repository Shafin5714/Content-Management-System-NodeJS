<div class="container">
    <div class="alert alert-secondary text-center">
        <h1>All Posts</h1>
    </div>
    <table class="table table-bordered text-center">
        <thead class="bg-dark">
            <tr class="text-white">
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>Status</th>
                <th>Comments Allowed</th>
                <th>Category</th>
                <th>Actions</th>
            </tr>
        </thead>


        <tbody>
            {{#each posts}}
            <tr>
                <td>{{_id}}</td>
                <td>{{title}}</td>
                <td>{{description}}</td>
                <td>{{status}}</td>
                <td>{{allowComments}}</td>
                <td>{{category.title}}</td>
                <td class="d-flex">
                    <a href="/admin/posts/edit/{{_id}}" class="btn btn-sm btn-warning mr-2">Edit Post</a>
               <form action="/admin/posts/delete/{{id}}?newMethod=DELETE" method="POST">
                    <button class="btn btn-sm btn-danger" type="submit">Delete Post</button>
               </form>
                </td>
            </tr>

            {{/each}}
        </tbody>
    </table>
</div>